generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- BLOG POST MODELİ (Bunu eklememiştin) ---
model Post {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  description String?  // Kartlarda görünecek özet
  content     String   // Ana içerik (Markdown)
  coverImage  String?  // Kapak resmi URL
  tags        String?  // Virgülle ayrılmış etiketler
  category    String   @default("General")
  
  published   Boolean  @default(false)
  featured    Boolean  @default(false) // Vitrin yazısı mı?
  
  views       Int      @default(0)
  claps       Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// --- MEVCUT MODELLERİN ---

model User {
  id        String           @id @default(cuid())
  email     String           @unique
  name      String?
  role      String           @default("USER")
  messages  GuestbookEntry[]
  createdAt DateTime         @default(now())
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String
  imageUrl    String?
  demoUrl     String?
  repoUrl     String?
  tags        String
  featured    Boolean  @default(false)
  claps       Int      @default(0)
  createdAt   DateTime @default(now())
}

model GuestbookEntry {
  id        String   @id @default(cuid())
  content   String
  approved  Boolean  @default(false)
  author    String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

model TimelineItem {
  id          String  @id @default(cuid())
  year        String
  title       String
  description String
  icon        String?
  order       Int     @default(0)
}

model StackItem {
  id        String   @id @default(cuid())
  name      String
  category  String
  level     String   @default("Intermediate")
  createdAt DateTime @default(now())
}

// YENİ: TEŞEKKÜRLER TABLOSU
model Supporter {
  id        String   @id @default(cuid())
  name      String
  note      String?
  link      String?
  createdAt DateTime @default(now())
}

model Profile {
  id              String   @id @default(cuid())
  headline        String
  bio             String
  imageUrl        String?
  location        String?
  
  githubUrl       String?
  linkedinUrl     String?
  twitterUrl      String?
  instagramUrl    String?
  
  buyMeACoffeeUrl String?
  spotifySong     String?
  spotifyArtist   String?
  spotifyUrl      String?
  
  updatedAt       DateTime @updatedAt
}